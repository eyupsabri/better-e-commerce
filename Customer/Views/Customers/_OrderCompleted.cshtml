@model CustomerResponse


@{
    var sum = Model.Items.Sum(p => p.Quantity * p.Product.ProductPrice);
}


<form id="CustomerValidation" class="row px-xl-5">
    <div class="col-lg-7">

        <div class="mb-4">

            <h4 class="font-weight-semi-bold mb-4">Billing Address</h4>
            <div class="row">

                <div class="col-md-8 form-group">
                    <label asp-for="CustomerName">Person Name</label>
                    <input asp-for="CustomerName" class="form-control" value="@Model.CustomerName" readonly>

                </div>


                <div class="col-md-8 form-group">
                    <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" value="@Model.Email" readonly>
                 
                </div>

                <div class="col-md-8 form-group">
                    <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Mobile</label>
                    <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" readonly>

                </div>


                <div class="col-md-8 form-group">
                    <label asp-for="Province" class="col-sm-2 col-form-label">Province</label>

                    <input asp-for="Province" class="form-control" value="@Model.Province" readonly>


                </div>
                <div class="col-md-8 form-group">
                    <label asp-for="City" class="col-sm-2 col-form-label">City</label>
                    <input asp-for="City" class="form-control" value="@Model.City" readonly>

                </div>
                <div class="col-md-8 form-group">
                    <label asp-for="StreetAddress" class="col-sm-2 col-form-label">Address</label>
                    <input asp-for="StreetAddress" class="form-control" value="@Model.StreetAddress" readonly>


                </div>
                <div class="col-md-8 form-group">
                    <label>Gender</label>
                    <select class="custom-select" asp-for="Gender">
                        @if (Model.Gender != null)
                        {
                            <option value="@Model.Gender" selected>@Model.Gender </option>
                        }else
                        {
                            <option selected>None</option>
                        }              
                    </select>
                </div>

