<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/assets/fontawesome/css/fontawesome.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unobstrusive" asp-fallback-src="~/assets/js/jquery.validate.unobtrusive.min.js"></script>
    <title>@ViewBag.Title</title>
</head>


<body style="background-color: #dee2e6;">
    <div class="container-lg">
        <nav class="navbar navbar-expand-lg bg-primary px-5" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="~/home">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/home">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Dropdown
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="~/Categories/Index">Update Categories</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Orders/Index">
                                Orders
                            </a>
                        </li>
                    </ul>

                    <select class="form-select container-sm" aria-label="Default select example" id="SearchBy" style=" width: 50%;">
                        <option selected value="product">By Product Name</option>
                        <option value="customer">By Customer Name</option>
                    </select>
                    <form class="d-flex" id="SearchByForm" method="post" style="width: 40%;">
                        
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="searchString" value="@ViewBag.CurrentSearchString" >
                        <button class="btn btn-outline-light initiatesearch" type="button">Search</button>
                    </form>
                </div>
            </div>
        </nav>

        <div class="container-lg">
            <div class="row">
                <div class="col-2" style="background-color: #ced4da;">
                    <nav class="nav flex-column">
                        @foreach (var item in ViewBag.Categories)
                        {
                            <a class="nav-link" asp-controller="Products" asp-action="Index" asp-route-categoryId="@item.CategoryId">@item.CategoryName</a>
                        }
                        <a class="nav-link active" aria-current="page" href="#">Active</a>

                        <a class="nav-link disabled">Disabled</a>
                    </nav>
                </div>
                @RenderBody()
            </div>
        </div>
        <footer class="bg-dark py-3 mt-0">
            <div class="container text-light text-center">
                <p class="display-5 mb-3">E- Commerce</p>
                <small class="text-white-50">&copy; Copyright By SpeedRunJS All rights reserved</small>
            </div>
        </footer>
    </div>


    <script>
        $(".initiatesearch").click(function () {
            var form = $("#SearchByForm");
            var searchby = $("#SearchBy").val();          
            //var $inputs = $('#SearchByForm :input');
            //var values = {};
            //$inputs.each(function () {
            //    values[this.name] = $(this).val();
            //});
            if (searchby == "product"){
                $('#SearchByForm').attr('action', '/Products/SearchProductByNameWithPagination');
            }else {
                $('#SearchByForm').attr('action', '/Orders/PaginatedCustomersByNameSearch');
            }
            form.submit();
            
        });
    </script>



    @RenderSection("scripts", required: false)
</body>
</html>
